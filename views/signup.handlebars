<div class="container row">
    <div class="jumbotron col-sm-4 pull-center">
        <form target="_blank" action="/signup" method="POST">
        <h1>Sign in</h1>
            <div>
                <label>Username:</label>
                <input type="text" name="username"/>
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password"/>
            </div>
            <div>
                <input class="btn btn-primary" onclick="window.location.href = '/login'" type="submit" value="Sign Up"/>
            </div>

            <a href="/login">If you already have an account, click here to login!</a>
        </form>
    </div>
</div>

